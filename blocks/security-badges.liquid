{% render 'product-security-badges', 
   heading: block.settings.heading, 
   show_heading: block.settings.show_heading 
%}

{% schema %}
{
  "name": "Security Badges",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "1212",
      "info": "Leave blank to use global setting"
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show heading",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Security Badges"
    }
  ]
}
{% endschema %}