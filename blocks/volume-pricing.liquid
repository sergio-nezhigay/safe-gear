{% comment %}
  Volume Pricing Block
  Shows a button to open the volume pricing contact form modal.
{% endcomment %}

<div class="volume-pricing-block" {{ block.shopify_attributes }}>
  <div class="volume-pricing-content">
    <button
      type="button"
      class="volume-pricing-button button {{ block.settings.button_style }}"
      on:click="#volume-pricing-modal/showDialog"
    >
      {{ block.settings.button_text }}
    </button>
  </div>
</div>

{% schema %}
{
  "name": "Volume Pricing",
  "tag": "div",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Inquire About Volume Pricing"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button Style",
      "options": [
        {
          "value": "button--primary",
          "label": "Primary"
        },
        {
          "value": "button--secondary",
          "label": "Secondary"
        },
        {
          "value": "button--outline",
          "label": "Outline"
        }
      ],
      "default": "button--secondary"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .volume-pricing-block {
    margin-top: var(--spacing-md, 1rem);
    width: 100%;
  }

  .volume-pricing-content {
    text-align: center;
    padding: var(--spacing-sm, 0.5rem) 0;
  }

  .volume-pricing-button {
    width: 100%;
    max-width: 400px;
  }
{% endstylesheet %}
