    stroke="{{ svg_stroke }}" stroke-width="{{ svg_stroke_width }}" stroke-linecap="round" stroke-linejoin="round" fill="{{ svg_fill }}" />
  <path d="M14 2V8H20" stroke="{{ svg_stroke }}" stroke-width="{{ svg_stroke_width }}" stroke-linecap="round" stroke-linejoin="round"/>
