{%- comment -%}
  Params:
    class   - CSS class for the <svg>
    size    - numeric size (width/height) default 24
    viewBox - optional viewBox (default "0 0 24 24")
    fill    - fill color default "none"
    stroke  - stroke color default "currentColor"
    stroke_width - stroke width default 2
    title   - accessible title (if provided -> role="img" + <title>)
{%- endcomment -%}

{%- assign svg_class = class | default: '' -%}
{%- assign svg_size = size | default: 24 -%}
{%- assign svg_viewbox = viewBox | default: '0 0 24 24' -%}
{%- assign svg_fill = fill | default: 'none' -%}
{%- assign svg_stroke = stroke | default: 'currentColor' -%}
{%- assign svg_stroke_width = stroke_width | default: 2 -%}

{%- if title != blank -%}
  {%- assign has_title = true -%}
{%- else -%}
  {%- assign has_title = false -%}
{%- endif -%}

<svg
  class="{{ svg_class }}"
  width="{{ svg_size }}"
  height="{{ svg_size }}"
  viewBox="{{ svg_viewbox }}"
  fill="{{ svg_fill }}"
  xmlns="http://www.w3.org/2000/svg"
  {%- if has_title -%}
    role="img" aria-label="{{ title | escape }}"
  {%- else -%}
    aria-hidden="true"
  {%- endif -%}
>
  {%- if has_title -%}
    <title>{{ title | escape }}</title>
  {%- endif -%}

