{% stylesheet %}
  .price-item {
    font-size: 24px !important;
  }
{% endstylesheet %}

{%- liquid
  if use_variant
    assign target = product.selected_or_first_available_variant
  elsif placeholder
    assign target = null
  else
    assign target = product
  endif

  assign compare_at_price = target.compare_at_price
  assign price = target.price | default: 1999
  assign price_min = product.price_min
  assign price_max = product.price_max
  assign available = target.available | default: false
  assign money_price = price | money
  assign money_price_min = price_min | money
  assign money_price_max = price_max | money
  
  if settings.currency_code_enabled
    assign money_price = price | money_with_currency
    assign money_price_min = price_min | money_with_currency
    assign money_price_max = price_max | money_with_currency
  endif

  assign show_compare_price = false
  if compare_at_price > price
    assign show_compare_price = true
  endif
-%}

{%- unless target == null and placeholder == null -%}
  <div
    class="
      price
      {%- if price_class %} {{ price_class }}{% endif -%}
      {%- if available == false %} price--sold-out{% endif -%}
      {%- if show_compare_price and product.quantity_price_breaks_configured? != true %} price--on-sale{% endif -%}
      {%- if show_compare_price and product.quantity_price_breaks_configured? %} volume-pricing--sale-badge{% endif -%}
      {%- if product.price_varies == false and product.compare_at_price_varies %} price--no-compare{% endif -%}
      {%- if show_badges %} price--show-badge{% endif -%}
    "
    id="price-{{ section.id }}"
  >
    <div 
      ref="priceContainer" 
      class="price__container" 
      bss-b2b-product-id="{{ product.id }}"  
      {% if use_variant %} 
        bss-b2b-variant-price 
        bss-b2b-variant-id="{{ target.id }}" 
        bss-b2b-featured-product 
      {% endif %} 
      bss-b2b-product-qb-id="{{ product.id }}" 
      bss-b2b-qb-featured-product-id="{{ product.id }}" 
      bss-b2b-section-id="{{ section.id }}"
      data-variant-id="{{ target.id }}"
      data-variant-price="{{ target.price }}"
      data-variant-compare-price="{{ target.compare_at_price }}"
      data-variant-available="{{ target.available }}"
    >
      <div class="price__regular" style="text-align: left">
        {%- if product.quantity_price_breaks_configured? -%}
          {%- if show_compare_at_price and compare_at_price -%}
            {%- unless product.price_varies == false and product.compare_at_price_varies %}
              <span role="group">
                <span class="visually-hidden visually-hidden--inline">
                  {{- 'products.product.price.regular_price' | t -}}
                </span>
                <span>
                  <s class="price-item price-item--regular variant-item__old-price">
                    {% if settings.currency_code_enabled %}
                      {{ compare_at_price | money_with_currency }}
                    {% else %}
                      {{ compare_at_price | money }}
                    {% endif %}
                  </s>
                </span>
              </span>
            {%- endunless -%}
          {%- endif -%}
          <span class="visually-hidden visually-hidden--inline">
            {{ 'products.product.price.regular_price' | t }}
          </span>
          <span class="price-item price-item--regular">
            {{-
              'products.product.volume_pricing.price_range'
              | t: minimum: money_price_min, maximum: money_price_max
            -}}
          </span>
        {%- else -%}
          <span class="visually-hidden visually-hidden--inline">
            {{ 'products.product.price.regular_price' | t }}
          </span>
          <span class="price-item price-item--regular">
            {{ money_price }} exc. VAT
          </span>
        {%- endif -%}
      </div>

      <div class="price__sale" style="text-align: left">
        {%- if show_compare_price -%}
          {%- unless product.price_varies == false and product.compare_at_price_varies %}
            <span role="group">
              <span class="visually-hidden visually-hidden--inline">
                {{ 'products.product.price.regular_price' | t }}
              </span>
              <span>
                <s class="price-item price-item--regular">
                  {% if settings.currency_code_enabled %}
                    {{ compare_at_price | money_with_currency }}
                  {% else %}
                    {{ compare_at_price | money }}
                  {% endif %}
                </s>
              </span>
            </span>
          {%- endunless -%}
        {%- endif -%}
        <span role="group">
          <span class="visually-hidden visually-hidden--inline">
            {{ 'products.product.price.sale_price' | t }}
          </span>
          <span class="price-item price-item--sale price-item--last" style="color: #16f33b">
            {{ money_price }} inc. VAT
          </span>
        </span>
      </div>

      {%- if target.unit_price_measurement -%}
        <small class="unit-price caption">
          <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
          <span class="price-item price-item--last">
            <span>{{- target.unit_price | money -}}</span>
            <span aria-hidden="true">/</span>
            <span class="visually-hidden">&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span>
            <span>
              {%- if target.unit_price_measurement.reference_value != 1 -%}
                {{- target.unit_price_measurement.reference_value -}}
              {%- endif -%}
              {{ target.unit_price_measurement.reference_unit }}
            </span>
          </span>
        </small>
      {%- endif -%}
    </div>

    {%- if show_badges -%}
      <span class="badge price__badge-sale color-{{ settings.sale_badge_color_scheme }}">
        {{ 'products.product.on_sale' | t }}
      </span>

      <span class="badge price__badge-sold-out color-{{ settings.sold_out_badge_color_scheme }}">
        {{ 'products.product.sold_out' | t }}
      </span>
    {%- endif -%}
  </div>
{% endunless %}