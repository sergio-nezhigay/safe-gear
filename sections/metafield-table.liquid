  type="module"
  fetchpriority="low"
></script>

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<product-metafields-section
  class="
    product-metafields-section
    section
    section--{{ section.settings.section_width | default: 'page-width' }}
    color-{{ section.settings.color_scheme }}
    spacing-style
