{{ 'why-choose-us.css' | asset_url | stylesheet_tag }}

<style>
  #{{ section.id }} {
    --why-choose-max-width: {{ section.settings.max_width }}px;
    --why-choose-padding-vertical: {{ section.settings.padding_top_mobile }}px {{ section.settings.padding_bottom_mobile }}px;
    --why-choose-padding-horizontal: {{ section.settings.padding_horizontal_mobile }}px;
    --why-choose-gap: {{ section.settings.grid_gap }}px;
    --why-choose-title-color: {{ section.settings.title_color }};
    --why-choose-subtitle-color: {{ section.settings.subtitle_color }};
    --why-choose-item-title-color: {{ section.settings.item_title_color }};
    --why-choose-item-text-color: {{ section.settings.item_text_color }};
    --why-choose-card-bg: {{ section.settings.card_background }};
    --why-choose-card-border: {{ section.settings.card_border_color }};
    --why-choose-title-size-mobile: {{ section.settings.title_size_mobile }}px;
    --why-choose-subtitle-size-mobile: {{ section.settings.subtitle_size_mobile }}px;
    --why-choose-item-title-size-mobile: {{ section.settings.item_title_size_mobile }}px;
    --why-choose-item-text-size-mobile: {{ section.settings.item_text_size_mobile }}px;
    --why-choose-title-size-desktop: {{ section.settings.title_size_desktop }}px;
    --why-choose-subtitle-size-desktop: {{ section.settings.subtitle_size_desktop }}px;
    --why-choose-item-title-size-desktop: {{ section.settings.item_title_size_desktop }}px;
    --why-choose-item-text-size-desktop: {{ section.settings.item_text_size_desktop }}px;
    background-color: {{ section.settings.section_background }};
  }

  @media (min-width: 768px) {
    #{{ section.id }} {
      --why-choose-padding-vertical: {{ section.settings.padding_top_desktop }}px {{ section.settings.padding_bottom_desktop }}px;
      --why-choose-padding-horizontal: {{ section.settings.padding_horizontal_desktop }}px;
    }
  }

  #{{ section.id }} .why-choose-title {
    color: var(--why-choose-title-color);
    font-size: var(--why-choose-title-size-mobile);
    text-align: center;
  }

  #{{ section.id }} .why-choose-subtitle {
    color: var(--why-choose-subtitle-color);
    font-size: var(--why-choose-subtitle-size-mobile);
    text-align: center;
  }

  #{{ section.id }} .why-choose-item-title {
    color: var(--why-choose-item-title-color);
    font-size: var(--why-choose-item-title-size-mobile);
  }

  #{{ section.id }} .why-choose-item-text {
    color: var(--why-choose-item-text-color);
    font-size: var(--why-choose-item-text-size-mobile);
  }

  #{{ section.id }} .why-choose-item {
    background-color: var(--why-choose-card-bg);
    border: 1px solid var(--why-choose-card-border);
  }

  @media (min-width: 768px) {
    #{{ section.id }} .why-choose-title {
      font-size: var(--why-choose-title-size-desktop);
    }

    #{{ section.id }} .why-choose-subtitle {
      font-size: var(--why-choose-subtitle-size-desktop);
    }

    #{{ section.id }} .why-choose-item-title {
      font-size: var(--why-choose-item-title-size-desktop);
    }

    #{{ section.id }} .why-choose-item-text {
      font-size: var(--why-choose-item-text-size-desktop);
    }
  }
</style>

<div id="{{ section.id }}" class="why-choose-wrapper {{ section.settings.custom_classes }}">
  <div class="why-choose-container">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="why-choose-header">
        {% if section.settings.title != blank %}
          <h2 class="why-choose-title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <div class="why-choose-subtitle">{{ section.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="why-choose-grid">
        {% for block in section.blocks %}
          <div class="why-choose-item" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <div class="why-choose-icon">
                {{ block.settings.icon }}
              </div>
            {% endif %}
            
            <div class="why-choose-content">
              {% if block.settings.title != blank %}
                <h3 class="why-choose-item-title">{{ block.settings.title }}</h3>
              {% endif %}
              
              {% if block.settings.text != blank %}
                <div class="why-choose-item-text">{{ block.settings.text }}</div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

