{%- assign block_settings = block.settings -%}

{% render 'product-security-badges', 
   heading: block_settings.heading, 
   show_heading: block_settings.show_heading 
%}

{% schema %}
{
  "name": "Security Badges",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "3131",
      "info": "Leave blank to use global setting"
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show heading",
      "default": true
    }
  ]
}
{% endschema %}