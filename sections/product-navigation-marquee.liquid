<script
  src="{{ 'marquee.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

{% assign gap_between_elements = section.settings.gap_between_elements %}
<div style="margin-top: 100px; margin-bottom: 100px;">
  <div class="section-background" style="background-color: #4b81bf;"></div>
  <marquee-component
    class="section gap-style product-nav-marquee"
    style="
      padding-top: 0px;
      padding-bottom: 0px;
      {% render 'gap-style', value: gap_between_elements, name: 'marquee-gap' %}
      --marquee-direction: {{ section.settings.movement_direction }};
      background-color: #4b81bf;
    "
    data-speed-factor="20"
    data-movement-direction="{{ section.settings.movement_direction }}"
  >
    <div
      class="marquee__wrapper"
      ref="wrapper"
    >
      <div
        class="marquee__content"
        ref="content"
      >
        <div class="marquee__repeated-items">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'navigation_link' %}
                <a
                  href="{{ block.settings.link }}"
                  class="nav-link-item"
                  {{ block.shopify_attributes }}
                >
                  {% if block.settings.icon != 'none' %}
                    <span class="nav-link-icon">
                      {% render 'icon-or-image',
                        icon: block.settings.icon,
                        width: block.settings.icon_size,
                        class_name: 'nav-icon'
                      %}
                    </span>
                  {% endif %}
                  {% if block.settings.label != blank %}
                    <span class="nav-link-label">{{ block.settings.label }}</span>
                  {% endif %}
                </a>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </marquee-component>
</div>
{% stylesheet %}
  marquee-component.product-nav-marquee {
    display: block;
    width: 100%;
    overflow: hidden;
  }

  .product-nav-marquee .marquee__wrapper {
    display: flex;
    gap: var(--marquee-gap);
    width: fit-content;
    white-space: nowrap;
  }

  .product-nav-marquee .marquee__content {
    min-width: max-content;
    display: flex;
    gap: var(--marquee-gap);
  }

  .product-nav-marquee .marquee__repeated-items {
    min-width: max-content;
    display: flex;
    gap: var(--marquee-gap);
    align-items: center;
    justify-content: center;
  }

  .nav-link-item {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    text-decoration: none;
    color: currentColor;
    white-space: nowrap;
    transition: opacity 0.2s ease;
  }

  .nav-link-item:hover {
    opacity: 0.8;
  }

  .nav-link-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .nav-link-icon svg {
    fill: currentColor;
  }

  .nav-link-label {
    font-size: 1rem;
    font-weight: 500;
  }

  @media screen and (max-width: 749px) {
    .nav-link-item {
      padding: 10px 20px;
    }

    .nav-link-label {
      font-size: 0.875rem;
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    marquee-component.product-nav-marquee:not([data-disabled]) .marquee__wrapper {
      animation: marquee-motion var(--marquee-speed) linear infinite var(--marquee-direction);
    }
  }

  @keyframes marquee-motion {
    to {
      transform: translate3d(calc(-50% - (var(--marquee-gap) / 2)), 0, 0);
    }
  }
{% endstylesheet %}

